//To deactivate (base) in the beginning of lines in terminal use 'conda config --set auto_activate_base false'

// This is visual studio code settings configuration for 'Python'
{
    //Below one is outdated
    //Create python virtual environment using terminal command: python -m venv venv
    
    //Use below one
    //1.sudo pip3 install virtualenv 
    //2.virtualenv venv 
    //Create python virtual environment using terminal command: virtualenv venv
    "python.pythonPath": "venv/bin/python", 

    "python.formatting.provider": "black",
    
    // Editor configuration
    "editor.formatOnSave": false,
    "editor.fontSize": 12,
    
    // Install 'Ayu' icon theme 
    "workbench.iconTheme": "ayu",

    //Code runner configuration
    "code-runner.executorMap": {
        "python": "$pythonPath -u $fullFileName",
    },
    "code-runner.clearPreviousOutput": true,
    "code-runner.showExecutionMessage": false
}
